
/* write a c program to print the menu order with price in an resturant using switch*/

#include<stdio.h>

int choice, quantity;
float price, total;

int main() {

	printf("Welcome to Karthick Hotel \n ");

	printf("1.Idly = Rs.10 \n");
	printf("2.Dosa = Rs.15 \n");
	printf("3.Poori = Rs.20 \n");
	printf("Enter your Choice(1-3)\n");
	scanf("%d", &choice);

	switch(choice) {

	case 1 :
		price = 10;
		printf("Enter your quantity \n");
		scanf("%d", &quantity);
		total = quantity * price;
		printf("Your total amount :  %f", total);
		break;
		
		
		case 2 :
		price = 15;
		printf("Enter your quantity \n");
		scanf("%d", &quantity);
		total = quantity * price;
		printf("Your total amount :  %f", total);
		break;


       	case 3 :
		price = 20;
		printf("Enter your quantity \n");
		scanf("%d", &quantity);
		total = quantity * price;
		printf("Your total amount :  %f", total);
		break;


	default :
		printf("Invalid Choice");
		break;

	}

	return 0;

output 

Welcome to Gokul's Hotel 
 1.Idly = Rs.10 
2.Dosa = Rs.15 
3.Poori = Rs.20 
Enter your Choice(1-3)
2
Enter your quantity 
2
Your total amount :  30.000000

}
